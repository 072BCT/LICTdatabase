@model IEnumerable<LICTProject.Models.Project>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--For Datatables-->
<link href="~/bower_components/datatables.net-bs/css/select.datatable.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">


<div class="row" style="margin-left:5%; margin-right:5%">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">PROJECTs</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="row-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Project_Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GrantProvider)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GrantAmt)
                            </th>
                           
                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td  style="font-family:sans-serif; font-weight:bold">
                              
                                    <a style="font-weight:normal; align-content:flex-end" href="@Url.Action("Details", "Projects", new { id = item.ProjectID })"> @Html.DisplayFor(modelItem => item.Project_Title)</a>
           
                                
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.GrantProvider)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.GrantAmt)
                            </td>
                           
                        </tr>
                    }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- ./wrapper -->
<!-- jQuery 3 -->
@section scripts{
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>


    <!-- DataTables -->
    <script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            var table = $('#example1').DataTable();

            $('#example tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });

            $('#example tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                alert('You clicked on ' + data[0] + '\'s row');
            });

        })
    </script>


}