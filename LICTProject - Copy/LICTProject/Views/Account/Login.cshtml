@using LICTProject.Models;
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Laboratory For ICT Research And Development</title>
    <link rel="icon" type="image/gif/jpg" href="~/Content/images/lab-logos.jpg">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/Login/css")
    <link href="~/Content/login/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login/theme-default.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="login-container lightmode">
    <div class="login-box animated fadeInDown">

        <div class="login-logo">
            <img src="~/dist/img/lab-logo.ico" style="max-height:65px; max-width:75px;" />
            <a href="#"><b>Admin</b>LOGIN</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <section id="loginForm">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User name", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class=" col-xs-offset-3 col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class=" col-xs-offset-3 col-xs-6">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
            </section>
        </div>

    </div>
    <link href="~/Content/cssMain.css" rel="stylesheet" type="text/css" />
    <footer>
        <table style=" width:90%" align="center";>
            <tbody>
                <tr><td colspan="3"><hr></td></tr>
                <tr>
                    <td width="10%"><img src="~/Content/images/ioeLogo.jpg" width="96" height="95" align="left"></td>
                    <td align="left" valign="middle"> <div align="left"><font size="+2"><b>Institute of Engineering(IOE),Tribhuvan University, Nepal</b></font></div></td>
                    <td align="right" valign="top">&nbsp; <a href="https://www.facebook.com/LICTLAB/" target="_blank"><img src="~/Content/images/facebook.ico" height="25"></a> &nbsp;<a href="https://twitter.com/lict_ioe" target="_blank"><img src="~/Content/images/twr.ico" height="25"></a>&nbsp; <a href="https://www.youtube.com/playlist?list=PLylVKBSqL0jDt6AXQA1WYfE2QAkaC54D7" target="_blank"><img src="~/Content/images/youTube.ico" height="25"></a></td>
                </tr>
                <tr height="30" valign="middle">
                    <td colspan="3" bgcolor="#FFE3D7" align="center" valign="middle">
                        <div align="center">
                            © 2016, Laboratory for ICT Research and Development (#lict) <br>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>     
    </footer>
    @Scripts.Render("~/Login/js") @*above scripts are bundled in BundleConfig.cs*@

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });</script>
</body>
</html>