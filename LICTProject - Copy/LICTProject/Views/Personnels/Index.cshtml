@model IEnumerable<LICTProject.Models.Personnel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">PERSONNELs</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="row-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PostAtIOE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Urls)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LICT_Title1.Title)
                            </th>
                            <th></th>
                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostAtIOE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Urls)
                            </td>
                            <td>
                                <p style="display:none">@Html.DisplayFor(modelItem => item.LICT_Title1.Ranks)</p> 
                                @Html.DisplayFor(modelItem => item.LICT_Title1.Title)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.PersonnelID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.PersonnelID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.PersonnelID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- ./wrapper -->
<!-- jQuery 3 -->
@section scripts{
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
   
   
    <!-- DataTables -->
    <script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
  
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            var table = $('#example1').DataTable();
            //$('#example2').DataTable({
            //    'paging': true,
            //    'lengthChange': false,
            //    'searching': false,
            //    'ordering': true,
            //    'info': true,
            //    'autoWidth': false
            //})

            

            $('#example tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });

            $('#example tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                alert('You clicked on ' + data[0] + '\'s row');
            });
           
        })
    </script>


}

